@model IEnumerable<JTN.DVDCentral.BL.Models.OrderItem>

<table id="orders" class="table data-table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.MovieTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/images/@item.ImagePath"
                id="orderImage"
                class="imageprop"
                alt="@item.Description"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-controller="OrderItem" asp-route-id="@item.Id" asp-action="Delete">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script type="text/javascript" class="init">
    $.noConflict();
    jQuery(document).ready(function ($){
        $('#orders').DataTable({
            "lengthMenu":[[5, 10, 25, 30, -1], [5, 10, 25, 30, "All"]]
        });
    });
    
</script>

